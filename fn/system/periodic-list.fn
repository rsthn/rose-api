    (echo "&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;period = (info.period)<br/>")
    (echo "&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;runs = (info.runs)<br/>")
