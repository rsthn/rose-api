
(import "lib/common")
(import "lib/utils")

(sentinel::auth-required)

(shield::validate form
    (shield::field photo
        required true
        file-type:image png,jpg,jpeg
        max-file-size:16m 16777216
    )
)

(utils::update-photo (form.photo) "user_id" (session.user.user_id) "users" "photo_path" 512)
(call "account.get")
